[Unit]
Description=Sophie Voice Bridge - ElevenLabs Custom LLM
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/clawd/projects/sophie-voice
Environment=PATH=/home/ubuntu/clawd/projects/sophie-voice/venv/bin:/usr/bin:/bin
ExecStart=/home/ubuntu/clawd/projects/sophie-voice/venv/bin/python bridge.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
